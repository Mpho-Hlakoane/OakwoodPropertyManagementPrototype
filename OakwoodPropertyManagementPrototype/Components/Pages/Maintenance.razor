@page "/maintenance-request"
@using OakwoodPropertyManagementPrototype.Models
@using OakwoodPropertyManagementPrototype.Data

<PageTitle>Maintenance Request</PageTitle>

<h1 class="text-center mb-4">Submit Maintenance Request</h1>

<div class="card p-4 shadow mb-4">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" class="form-control" placeholder="E.g., Leaking faucet" />
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" class="form-control" rows="4" placeholder="Describe the issue"></textarea>
    </div>

    <div class="mb-3">
        <label for="priority" class="form-label">Priority</label>
        <select id="priority" class="form-select w-25">
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
        </select>
    </div>

    <button class="btn btn-primary">Submit Request</button>
</div>

<h4>My Maintenance Requests</h4>
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Title</th>
            <th>Status</th>
            <th>Date Submitted</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var req in SeedData.MaintenanceRequests.FindAll(r => r.TenantId == 1))
        {
            <tr>
                <td>@req.Id</td>
                <td>@req.Title</td>
                <td>@req.Status</td>
                <td>@req.DateSubmitted.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
