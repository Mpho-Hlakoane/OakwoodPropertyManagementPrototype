@page "/payment-page"
@using OakwoodPropertyManagementPrototype.Models
@using OakwoodPropertyManagementPrototype.Data

<PageTitle>Pay Rent</PageTitle>

<h1 class="text-center mb-4">Rent Payment</h1>

@{
    var lease = SeedData.Leases[0];
}

<div class="card p-4 shadow">
    <h3>Tenant: @SeedData.Tenants[0].Name</h3>
    <p>Outstanding Balance: <strong>@lease.RentAmount.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("en-ZA"))</strong></p>

    <div class="mt-3 mb-3">
        <label>Amount to Pay:</label>
        <input type="number" class="form-control w-25" value="@lease.RentAmount" />
    </div>

    <div class="mb-3">
        <label>Payment Method:</label>
        <select class="form-select w-25">
            <option>Credit Card</option>
            <option>Bank Transfer</option>
            <option>PayPal</option>
        </select>
    </div>

    <button class="btn btn-primary">Submit Payment</button>
</div>

<div class="mt-4 card p-3 shadow">
    <h4>Payment Receipt</h4>
    <p>Receipt #: RCT-00123</p>
    <p>Amount Paid: @lease.RentAmount.ToString("C0", System.Globalization.CultureInfo.CreateSpecificCulture("en-ZA"))</p>
    <p>Date: 10 Nov 2025</p>
</div>
